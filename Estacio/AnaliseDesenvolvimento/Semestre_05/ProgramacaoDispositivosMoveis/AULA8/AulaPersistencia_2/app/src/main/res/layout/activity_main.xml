<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    android:paddingBottom="16dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:padding="5dp"
        android:text="INTERNAL STORAGE"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="20sp"/>
    <EditText
        android:id="@+id/quadroTexto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/textView1"
        android:layout_marginTop="22dp"
        android:minLines="5">
    <requestFocus/>
    </EditText>
    <Button
        android:id="@+id/botaoGravarArquivo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gravar"
        android:onClick="gravarArquivo"
        android:layout_alignTop="@+id/botaoLerArquivo"
        android:layout_alignRight="@id/quadroTexto"
        android:background="#f00"
        android:layout_alignEnd="@id/quadroTexto"/>
    <Button
        android:id="@+id/botaoLerArquivo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ler"
        android:onClick="lerArquivo"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/quadroTexto"
        android:background="#0fa"
        android:layout_alignStart="@id/quadroTexto"/>

</RelativeLayout>