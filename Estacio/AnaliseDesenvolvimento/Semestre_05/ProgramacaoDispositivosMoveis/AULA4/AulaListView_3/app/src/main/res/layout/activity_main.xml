<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="16dp"
    android:paddingRight="16dp"
    android:paddingLeft="16dp"
    android:paddingBottom="16dp"
    tools:context=".MainActivity">
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:text="Teste1"
        android:id="@+id/btnTeste1"
        android:onClick="executarTeste1Atividade"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnTeste1"
        android:layout_alignParentStart="true"
        android:text="Teste2"
        android:id="@+id/btnTeste2"
        android:onClick="executarTeste2Atividade"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnTeste2"
        android:layout_alignParentStart="true"
        android:text="Teste3"
        android:id="@+id/btnTeste3"
        android:onClick="executarTeste3Atividade"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnTeste3"
        android:layout_alignParentStart="true"
        android:text="Teste4"
        android:id="@+id/btnTeste4"
        android:onClick="executarTeste4Atividade"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnTeste4"
        android:layout_alignParentStart="true"
        android:text="Teste5"
        android:id="@+id/btnTeste5"
        android:onClick="executarTeste5Atividade"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnTeste5"
        android:layout_alignParentStart="true"
        android:text="Sair"
        android:id="@+id/btnSair"
        android:onClick="executaFim"/>
</RelativeLayout>