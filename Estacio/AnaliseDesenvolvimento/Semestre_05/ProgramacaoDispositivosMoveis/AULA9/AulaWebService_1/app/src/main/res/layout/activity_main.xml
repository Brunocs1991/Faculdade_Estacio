<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:id="@+id/a"
    android:background="#ffdd9b"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/result"
        android:layout_marginTop="82dp"/>
    <Button
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:text="Enviar"
        android:id="@+id/enviar"
        android:layout_below="@+id/sCepDestino"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"/>
    <EditText
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:id="@+id/CdServico"
        android:hint="Insira o Código do Serviço"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/textView2"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"/>
    <EditText
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:id="@+id/sCepOrigem"
        android:hint="Cep de Origem"
        android:layout_marginTop="30dp"
        android:layout_below="@id/CdServico"
        android:layout_centerHorizontal="true"/>
    <EditText
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:id="@+id/sCepDestino"
        android:hint="Cep de Destino"
        android:layout_below="@+id/result"
        android:layout_marginTop="90dp"
        android:layout_alignLeft="@id/sCepOrigem"
        android:layout_alignStart="@+id/sCepOrigem"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Calcular o Prazo de Entrega"
        android:id="@+id/textView2"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>